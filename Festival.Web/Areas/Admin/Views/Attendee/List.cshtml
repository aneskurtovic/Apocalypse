@using Festival.Web.ViewModels.Attendee;
@model List<Festival.Web.ViewModels.Attendee.AttendeeListVM>
@{
    ViewData["Title"] = "Attendees";
}

<h1>Attendees</h1>

<table class="table table-striped table-hover text-center ">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (AttendeeListVM x in Model)
        {
            <tr>
                <td>@x.Id</td>
                <td>@x.Name</td>
                <td>@x.Email</td>
                <td>
                    <div class="btn-group">
                        <a style="margin-right:5px;" asp-controller="Attendee" asp-action="Detail" asp-route-id="@x.Id" class="btn btn-info active btn-sm" role="button" aria-pressed="true">
                            <i class="fa fa-info mr-1"></i>
                            Detail
                        </a>
                        
                    </div>
                </td>
            </tr>

        }
    </tbody>
</table>
