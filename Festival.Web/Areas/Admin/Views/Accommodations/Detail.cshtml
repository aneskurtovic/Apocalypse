@model Festival.Web.ViewModels.Accommodation.DetailAccommodationVM;
@{
    ViewData["Title"] = Model.Name;
}


<div class="col-6" style="float:left">
    <h2 class="detailName">@Model.Name</h2>
    <div class="form-group row detailRow">
        <label class="detailLabel" for="PhoneNumber">Phone number : </label>
        <span class="detailData">@Model.PhoneNumber</span>
    </div>
    <div class="form-group row detailRow">
        <label class="detailLabel" for="Address">Address : </label>
        <span class="detailData">@Model.Address</span>
    </div>
    <div class="form-group row detailRow">
        <label class="detailLabel" for="Distance">Distance : </label>
        <span class="detailData">@Model.Distance km</span>
    </div>
    <div class="form-group row detailRow">
        <label class="detailLabel" for="Description">Description : </label>
        <span style="" class="detailData">@Model.Description</span>
    </div>
    <div class="detailButtons btn-group">
        <a style="margin-right:5px;" asp-controller="Accommodations" asp-action="List" class="btn btn-info active" role="button" aria-pressed="true">
            Back
            <i class="fa fa-undo"></i>
        </a>
        <a style="margin-right:5px;" asp-controller="Accommodations" asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-secondary active" role="button" aria-pressed="true">
            Edit
            <i class="fa fa-edit"></i>
        </a>
        <a asp-controller="Accommodations" asp-action="Delete" asp-route-id="@Model.ID" class="btn btn-danger" role="button" aria-pressed="true">
            Delete
            <i class="fa fa-trash"></i>
        </a>
    </div>
</div>
<div class="col-6 " style="float:right">
    <img src="~/images/accommodations/@Model.Picture" class="accImage imageDiv" />
</div>

<div class="clearfix"></div>
