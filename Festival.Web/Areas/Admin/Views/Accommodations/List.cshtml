@using Festival.Web.ViewModels.Accommodation;
@model List<Festival.Web.ViewModels.Accommodation.AccommodationListVM>
@{
    ViewData["Title"] = "Accommodations";
}

<h1>Accommodations</h1>
<div style="float:right; margin-bottom:10px;">
    <a asp-controller="Accommodations" asp-action="New" class="btn btn-success btn-lg active addnew" role="button" aria-pressed="true">Add New   <i class="fa fa-plus"></i></a>
</div>
<table class="table table-striped table-hover text-center table-responsive-sm">
    <thead class="thead-dark zaglavlje">
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Distance</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (AccommodationListVM x in Model)
        {
            <tr>
                <td>@x.ID</td>
                <td>@x.Name</td>
                <td>@x.Address</td>
                <td>@x.PhoneNumber</td>
                <td>@x.Distance km</td>
                <td>
                    <div class="btn-group">
                        <a style="margin-right:5px;" asp-controller="Accommodations" asp-action="Detail" asp-route-id="@x.ID" class="btn btn-info active btn-sm" role="button" aria-pressed="true">
                            <i class="fa fa-info mr-1"></i>
                            Detail
                        </a>
                        <a style="margin-right:5px;" asp-controller="Accommodations" asp-action="Edit" asp-route-id="@x.ID" class="btn btn-secondary active btn-sm" role="button" aria-pressed="true">
                            <i class="fa fa-edit"></i>
                            Edit
                        </a>
                        <a asp-controller="Accommodations" asp-action="Delete" asp-route-id="@x.ID" class="btn btn-danger btn-sm" role="button" aria-pressed="true">
                            <i class="fa fa-trash"></i>
                            Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
