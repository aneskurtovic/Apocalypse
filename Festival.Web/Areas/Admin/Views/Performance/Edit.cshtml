@model Festival.Web.ViewModels.Performance.EditPerformanceVM;
@{
    ViewData["Title"] = "Performance #" + Model.ID;
}


<style>

    .container {
        padding: 0 !important;
    }

    main.pb-3 {
        padding-bottom: 0 !important;
    }
</style>

<div class="formDiv" style="background-color:#e2e2e2;">
    <form class="formMy" style="border:2px dotted #fafafa; background-color:#fafafa" asp-action="Save" enctype="multipart/form-data" method="post">
        <fieldset>
            <input asp-for="ID" hidden />
            <div class="form-group newRow">
                <label class="newLabel" for="Performer">Performer :</label>
                <div>
                    <select asp-items="@Model.Performers" asp-for="PerformerID" class="form-control">
                    </select>
                </div>
            </div>

            <div class="form-group newRow">
                <label class="newLabel" for="Performer">Stage :</label>
                <div>
                    <select asp-items="@Model.Stages" asp-for="StageID" class="form-control">
                    </select>
                </div>
            </div>

            <div class="form-group newRow">
                <label for="Start" class="newLabel">Start date :</label>
                <div>
                    <input asp-for="Start" class="form-control" />
                </div>
                <span asp-validation-for="Start" class="text-danger"></span>
            </div>


            <div class="clearfix"></div>
        </fieldset>
        <div class="btn-group">
            <a style="margin-right:5px;" asp-controller="Performance" asp-action="List" asp-route-id="@Model.ID" class="btn btn-info active" role="button" aria-pressed="true">
                Back
                <i class="fa fa-undo"></i>
            </a>
            <a asp-controller="Performance" asp-action="Delete" asp-route-id="@Model.ID" class="btn btn-danger" role="button" aria-pressed="true">
                Delete
                <i class="fa fa-trash"></i>
            </a>
            <input type="submit" value="Save changes" class="btn btn-secondary submit ml-1" />
        </div>
    </form>
</div>
