@model Festival.Web.ViewModels.TransferService.DetailTransferServiceVM;
@{
    ViewData["Title"] = "Detail";
}


<div class="col-6">
    <h2 class="detailName">Transfer Service</h2>
    <div class="form-group row detailRow">
        <label class="detailLabel" for="VehicleName">Vehicle Name : </label>
        <span class="detailData">@Model.VehicleName</span>
    </div>
    <div class="form-group row detailRow">
        <label class="detailLabel" for="MeetingPoint">Meeting Point : </label>
        <span class="detailData">@Model.MeetingPoint</span>
    </div>
    <div class="form-group row detailRow">
        <label class="detailLabel" for="Date">Date : </label>
        <span class="detailData">@Model.Date</span>
    </div>
    <div class="form-group row detailRow">
        <label class="detailLabel" for="AvailableSeats">Available seats : </label>
        <span style="" class="detailData">@Model.AvailableSeats</span>
    </div>
    <div class="detailButtons btn-group">
        <a style="margin-right:5px;" asp-controller="TransferService" asp-action="List" class="btn btn-info active" role="button" aria-pressed="true">
            Back
            <i class="fa fa-undo"></i>
        </a>
        <a style="margin-right:5px;" asp-controller="TransferService" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary active" role="button" aria-pressed="true">
            Edit
            <i class="fa fa-edit"></i>
        </a>
        <a asp-controller="TransferService" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger" role="button" aria-pressed="true">
            Delete
            <i class="fa fa-trash"></i>
        </a>
    </div>
</div>
<div class="clearfix"></div>
