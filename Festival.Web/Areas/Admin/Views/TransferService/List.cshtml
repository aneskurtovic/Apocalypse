@using Festival.Web.ViewModels.TransferService;
@model List<Festival.Web.ViewModels.TransferService.ListTransferServiceVM>
@{
    ViewData["Title"] = "Transfer Services";
}


<h1>Transfer Services</h1>
<div style="float:right; margin-bottom:10px;">
    <a asp-controller="TransferService" asp-action="New" class="btn btn-success btn-lg active addnew" role="button" aria-pressed="true">Add New   <i class="fa fa-plus"></i></a>
</div>
<table class="table table-striped table-hover">
    <thead class="thead-dark zaglavlje">
        <tr>
            <th>#</th>
            <th>Vehicle Name</th>
            <th>Meeting point</th>
            <th>Available Seats</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ListTransferServiceVM x in Model)
        {
            <tr>
                <td>@x.Id</td>
                <td>@x.VehicleName</td>
                <td>@x.MeetingPoint</td>
                <td>@x.AvailableSeats</td>
                <td>@x.Date</td>
                <td>
                    <a style="margin-right:5px;" asp-controller="TransferService" asp-action="Detail" asp-route-id="@x.Id" class="btn btn-info active btn-sm" role="button" aria-pressed="true">
                        <i class="fa fa-info mr-1"></i>
                        Detail
                    </a>
                    <a style="margin-right:5px;" asp-controller="TransferService" asp-action="Edit" asp-route-id="@x.Id" class="btn btn-secondary active btn-sm" role="button" aria-pressed="true">
                        <i class="fa fa-edit"></i>
                        Edit
                    </a>
                    <a asp-controller="TransferService" asp-action="Delete" asp-route-id="@x.Id" class="btn btn-danger btn-sm" role="button" aria-pressed="true">
                        <i class="fa fa-trash"></i>
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
