@model Festival.Web.ViewModels.Stage.EditStageVM;
@{
    ViewData["Title"] = Model.Name;
}

<style>

    .container {
        padding: 0 !important;
    }

    main.pb-3 {
        padding-bottom: 0 !important;
    }
</style>

<div class="formDiv" style="background-color:#e2e2e2;">
    <form class="formMy" style="border:2px dotted #fafafa; background-color:#fafafa" asp-controller="Stage" asp-action="Save" method="post" enctype="multipart/form-data">
        <fieldset>
            <input asp-for="Id" hidden />
            <div class="form-group newRow">
                <label for="Name" class="newLabel">Name :</label>
                <div>
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group newRow">
                <label class="newLabel" for="Capacity">Capacity :</label>
                <div>
                    <input asp-for="Capacity" class="form-control col-4" />
                </div>
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>

            <div class="form-group newRow">
                <label class="newLabel" for="Sponsor">Sponsor :</label>

                <select asp-items="@Model.Sponsors" asp-for="SponsorID" class="form-control">
                    <option selected disabled>(Choose a sponsor)</option>
                </select>
                <span asp-validation-for="SponsorID" class="text-danger"></span>

            </div>
            <label class="newLabel" for="Image">Image :</label>
            <div class="custom-file newRow">
                <div>
                    <input asp-for="Image" class="form-control custom-file-input col-6" />
                    <label class="custom-file-label" for="Image">Choose image</label>
                </div>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </fieldset>
        <div class="btn-group">
            <a style="margin-right:5px;" asp-controller="Stage" asp-action="List" class="btn btn-info active" role="button" aria-pressed="true">
                Back
                <i class="fa fa-undo"></i>
            </a>
            <a asp-controller="Stage" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger" role="button" aria-pressed="true">
                Delete
                <i class="fa fa-trash"></i>
            </a>
            <input type="submit" value="Save changes" class="btn btn-secondary submit ml-1" />
        </div>


    </form>
</div>
