@using Festival.Web.ViewModels.Stage;
@model List<Festival.Web.ViewModels.Stage.StagesListVM>
@{
    ViewData["Title"] = "Stages";
}

<h1>Stages</h1>
<div style="float:right; margin-bottom:10px;">
    <a asp-controller="Stage" asp-action="New" class="btn btn-success btn-lg active addnew" role="button" aria-pressed="true">Add new <i class="fa fa-plus"></i></a>
</div>
<table class="table  table-striped table-hover text-center justify-content-center">
    <thead class="thead-dark zaglavlje">
        <tr>
            <th>#</th>
            <th>Stage</th>
            <th>Capacity</th>
            <th>Sponsor</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (StagesListVM x in Model)
        {
            <tr>
                <td>@x.Number</td>
                <td>@x.Name</td>
                <td>@x.Capacity</td>
                <td>@x.Sponsor</td>
                <td>
                    <div class="btn-group">
                        <a style="margin-right:5px;" asp-controller="Stage" asp-action="Detail" asp-route-id="@x.StageID" class="btn btn-info active btn-sm" role="button" aria-pressed="true">
                            <i class="fa fa-info mr-1"></i>
                            Detail
                        </a>
                        <a style="margin-right:5px;" asp-controller="Stage" asp-action="Edit" asp-route-id="@x.StageID" class="btn btn-secondary active btn-sm" role="button" aria-pressed="true">
                            <i class="fa fa-edit"></i>
                            Edit
                        </a>
                        <a asp-controller="Stage" asp-action="Delete" asp-route-id="@x.StageID" class="btn btn-danger btn-sm" role="button" aria-pressed="true">
                            <i class="fa fa-trash"></i>
                            Delete
                        </a>
                    </div>
                </td>
            </tr>

        }
    </tbody>
</table>
