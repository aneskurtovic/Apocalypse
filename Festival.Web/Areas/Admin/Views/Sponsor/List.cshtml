@using Festival.Web.ViewModels.Sponsor;
@model List<Festival.Web.ViewModels.Sponsor.SponsorsListVM>
@{
    ViewData["Title"] = "Sponsors";
}

<h1>Sponsors</h1>
<div style="float:right; margin-bottom:10px;">
    <a asp-controller="Sponsor" asp-action="New" class="btn btn-success btn-lg active addnew" role="button" aria-pressed="true">Add new   <i class="fa fa-plus"></i></a>
</div>
<table class="table table-striped table-hover text-center  align-middle">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Company Name</th>
            <th>Phone Number</th>
            <th>Contact Person</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{int broj = 0; }
        @foreach (SponsorsListVM x in Model)
        {
            broj++;
            <tr>
                <td>@broj</td>
                <td>@x.CompanyName</td>
                <td>@x.Number</td>
                <td>@x.ContactPersonName</td>
                <td>
                    <div class="btn-group">
                        <a style="margin-right:5px;" asp-controller="Sponsor" asp-action="Detail" asp-route-id="@x.SponsorID" class="btn btn-info active btn-sm" role="button" aria-pressed="true">
                            <i class="fa fa-info mr-1"></i>
                            Detail
                        </a>
                        <a style="margin-right:5px;" asp-controller="Sponsor" asp-action="Edit" asp-route-id="@x.SponsorID" class="btn btn-secondary active btn-sm" role="button" aria-pressed="true">
                            <i class="fa fa-edit"></i>
                            Edit
                        </a>
                        <a asp-controller="Sponsor" asp-action="Delete" asp-route-id="@x.SponsorID" class="btn btn-danger btn-sm" role="button" aria-pressed="true">
                            <i class="fa fa-trash"></i>
                            Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
