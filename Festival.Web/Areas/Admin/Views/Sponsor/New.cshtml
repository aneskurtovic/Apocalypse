@model Festival.Web.ViewModels.Sponsor.NewSponsorVM;
@{
    ViewData["Title"] = "New Sponsor";
}

<style>

    .container {
        padding: 0 !important;
    }

    main.pb-3 {
        padding-bottom: 0 !important;
    }
</style>

<div class="formDiv" style="background-color:#e2e2e2;">
    <form class="formMy" style="border:2px dotted #fafafa; background-color:#fafafa" asp-action="SaveNew" enctype="multipart/form-data" method="post">
        <fieldset>
            <div class="form-group newRow">
                <label for="Name" class="newLabel">Company Name :</label>
                <div>
                    <input asp-for="CompanyName" class="form-control" />
                </div>
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>

            <div class="form-group newRow">
                <label for="Address" class="newLabel">Address :</label>
                <div>
                    <input asp-for="Address" class="form-control" />
                </div>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group newRow">

                <label class="newLabel" for="PhoneNumber">Phone Number :</label>
                <div>
                    <input asp-for="PhoneNumber" class="form-control col-sm-5" />
                </div>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>

            </div>
            <div class="form-group newRow">

                <label class="newLabel" for="Distance">Contact Person : </label>
                <div>
                    <input class="col-sm-5 form-control" asp-for="ContactPersonName" />
                </div>
                <span asp-validation-for="ContactPersonName" class="text-danger"></span>

            </div>
            <div class="clearfix"></div>

            <label class="newLabel" for="Image">Image :</label>
            <div class="custom-file newRow">
                <div>
                    <input asp-for="Image" class="form-control custom-file-input col-6" />
                    <label class="custom-file-label" for="Image">Choose image</label>
                </div>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </fieldset>


        <div class="btn-group">
            <a style="margin-right:5px;" asp-controller="Sponsor" asp-action="List" class="btn btn-info active" role="button" aria-pressed="true">
                Back
                <i class="fa fa-undo"></i>
            </a>
            <input type="submit" value="Save new" class="btn btn-lg btn-secondary submit ml-1" />
        </div>


    </form>
</div>
