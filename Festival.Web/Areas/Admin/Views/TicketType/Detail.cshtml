@model Festival.Web.ViewModels.TicketType.DetailTicketTypeVM;
@{
    ViewData["Title"] = Model.Name;
}


<div class="col-6">
    <h2 class="detailName">@Model.Name</h2>
    <div class="form-group row detailRow">
        <label class="detailLabel" for="Description">Description : </label>
        <span class="detailData">@Model.Description</span>
    </div>
    <div class="form-group row detailRow">
        <label class="detailLabel" for="Price">Price : </label>
        <span class="detailData">@Model.Price KM</span>
    </div>
    <div class="form-group row detailRow">
        <label class="detailLabel" for="TicketsSold">Tickets sold : </label>
        <span class="detailData">@Model.TicketsSold</span>
    </div>
    <div class="detailButtons btn-group">
        <a style="margin-right:5px;" asp-controller="TicketType" asp-action="List" class="btn btn-info active" role="button" aria-pressed="true">
            Back
            <i class="fa fa-undo"></i>
        </a>
        <a style="margin-right:5px;" asp-controller="TicketType" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary active" role="button" aria-pressed="true">
            Edit
            <i class="fa fa-edit"></i>
        </a>
        <a asp-controller="TicketType" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger" role="button" aria-pressed="true">
            Delete
            <i class="fa fa-trash"></i>
        </a>
    </div>
</div>
<div class="clearfix"></div>
