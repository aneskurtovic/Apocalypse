@model Festival.Web.ViewModels.TransferVehicle.DetailTransferVehicleVM;
@{
    ViewData["Title"] = Model.Name;
}


<div class="col-6" style="float:left">
    <h2 class="detailName">@Model.Name</h2>
    <div class="form-group row detailRow">
        <label class="detailLabel" for="RegistrationNumber">Registration Number : </label>
        <span class="detailData">@Model.RegistrationNumber</span>
    </div>
    <div class="form-group row detailRow">
        <label class="detailLabel" for="Capacity">Capacity : </label>
        <span class="detailData">@Model.Capacity</span>
    </div>
    <div class="form-group row detailRow">
        <label class="detailLabel" for="Driver">Driver : </label>
        <span class="detailData">@Model.Driver</span>
    </div>
    <div class="detailButtons btn-group">
        <a style="margin-right:5px;" asp-controller="TransferVehicle" asp-action="List" class="btn btn-info active" role="button" aria-pressed="true">
            Back
            <i class="fa fa-undo"></i>
        </a>
        <a style="margin-right:5px;" asp-controller="TransferVehicle" asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-secondary active" role="button" aria-pressed="true">
            Edit
            <i class="fa fa-edit"></i>
        </a>
        <a asp-controller="TransferVehicle" asp-action="Delete" asp-route-id="@Model.ID" class="btn btn-danger" role="button" aria-pressed="true">
            Delete
            <i class="fa fa-trash"></i>
        </a>
    </div>
</div>
<div class="col-6" style="float:right">
    <img src="~/images/transfervehicles/@Model.Picture" class="accImage imageDiv" />
</div>

<div class="clearfix"></div>
